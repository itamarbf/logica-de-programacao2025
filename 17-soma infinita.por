programa
{
	
	funcao inicio()
	{
		inteiro numero=1, soma=0
		para(inteiro i=1;numero!=0;i=i+1){
			escreva("Digite um número: ")
			leia(numero)
			soma = soma + numero
		}
		escreva("A soma dos valores é ", soma)
	}
}
